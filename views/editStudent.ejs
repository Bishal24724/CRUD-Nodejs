<!DOCTYPE html>
<html>
  <head>
    <title>Edit Student</title>
  </head>
  <body>
    <h1>Edit Student</h1>
    <% if (typeof errorMessages !== 'undefined' && errorMessages.length > 0) { %>
        <div style="color: red;">
          <ul>
            <% errorMessages.forEach(error => { %>
              <li><%= error %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>
    <form action="/update/<%= student.id %>" method="POST">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" value="<%= student.name %>" required />

      <label for="age">Age:</label>
      <input type="number" id="age" name="age" value="<%= student.age %>" required />

      <label for="email">Email:</label>
      <input type="email" id="email" name="email" value="<%= student.email %>" required />

      <label for="address">Address:</label>
      <input type="text" id="address" name="address" value="<%= student.address %>" required />

      <button type="submit">Update</button>
      <a href="/students"><button type="button">Cancel</button></a>
    </form>
  </body>
</html>
